        function XuatExcel() { 
            try {
                KTApp.blockPage({ overlayColor: '#000000', state: 'primary', message: 'Đang xuất dữ liệu...' });
                $('#list_danh_sach').dxDataGrid("instance").exportToExcel(false);
                KTApp.unblockPage();
            } catch (e) {
                KTApp.unblockPage();
            }
        }
        function LayDuLieu() {
            var formData = new FormData();
            var files = $("#UploadedFile").get(0).files;
            formData.append('importFile', files[0]);
            formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());
            KTApp.blockPage({ overlayColor: '#000000', state: 'primary', message: 'Đang tải dữ liệu...' });
            $.ajax({
                url: '/CanHo/ImportFileExcel',
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (rs) {
                    if (rs.rs_code == 1) {
                        data = rs.rs_data;
                        $("#txt-tong").html("Tổng: " + data.length);
                        var HopLe = data.filter(element => element.Loi == "");
                        $("#txt-hople").html("Hợp lệ: " + HopLe.length);
                        HopLe = data.filter(element => element.Loi != "");
                        $("#txt-loi").html("Lỗi: " + HopLe.length);
                        LoadCanHo();
                        KTApp.unblockPage();
                        $("#UploadedFile").val(null)
                        $("#exampleModal").modal('hide');

                    }
                    else {
                        KTApp.unblockPage();
                        alert(rs.rs_text)
                    }
                },
                error: function (err) {
                    toastr.error("Lỗi hệ thống liên hệ nhà quản trị để được hỗ trợ" + err);
                    KTApp.unblockPage();
                }
            });
        }
