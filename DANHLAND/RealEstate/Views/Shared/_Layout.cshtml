    <script>
        var id = 0;;
        function ShowUser() {
            $.post("@Url.Action("ThongTinNhanVien", "NhanVien")").done(function (rs) {
                $('#txt-taikhoan').val(rs.user_login);
                $('#txt-matkhau').val(rs.user_pass);
                $('#txt-dienthoai').val(rs.user_activation_key);
                $('#txt-email').val(rs.user_email);
                id = rs.ID
            }).fail(function () {
                alert(rs);
            })
            $('#mdUser').modal('show');
        }
        $('#iUpdate').click(function () {
            let data = {};
            let taikhoan = $("#txt-taikhoan").val();
            let email = $("#txt-email").val();
            let matkhau = $("#txt-matkhau").val();
            let dienthoai = $("#txt-dienthoai").val();

            data.user_login = taikhoan;
            data.user_pass = matkhau;
            data.user_email = email;
            data.user_activation_key = dienthoai;
            data.ID = id;
            if (taikhoan == null || email == null || matkhau == null || dienthoai == null || taikhoan.trim() == "" || email.trim() == "" || matkhau.trim() == "" || dienthoai.trim() == "") {
                ShowToast.warning('Lỗi bạn chưa nhập đủ thông tin ', 1000);
                return
            }
            data.__RequestVerificationToken = $('input[name="__RequestVerificationToken"]').val();
            KTApp.blockPage({
                    overlayColor: '#000000',
                    state: 'primary',
                    message: 'Processing...'
                });
            $.post("@Url.Action("EditNhanVienCaNhan", "NhanVien")", data).done(function (rs) {
                if (rs.rs_code == 1) {
                    KTApp.unblockPage();
                    ShowToast.success('Thành công', 3000);
                }
                else {
                    KTApp.unblockPage();
                    ShowToast.warning('Lỗi ' + rs.rs_text, 3000);
                }
            }).fail(function () {
                KTApp.unblockPage();
                ShowToast.warning('Có lỗi xảy ra', 3000);
            });
        })
    </script>
